<% if @restaurants.any? %>
<% @restaurants.each do |restaurant| %>
<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
<h2><%= restaurant.description %>
    <h2><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></h2>
    <h2><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete%>
    </h2>
    <h2><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    </h2>
    <% if restaurant.reviews.any? %>
    <% restaurant.reviews.each do |review| %>
    <%= review.thoughts %>
    <%= review.rating %>
    <% end %>
    <% end %>
    <br>
    <% end %>
<% else %>
    <h1>No restaurants yet</h1>
    <br>
    <% end %>

    <%= link_to "Add a restaurant", new_restaurant_url %>
